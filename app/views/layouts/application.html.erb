<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Melhor do melhor do mundo F.C" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
	<link rel="shortcut icon" href="/images/melhor.ico" />
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <%= image_tag("../images/fundo.jpg", :id => "bg")%>
    <div id="content">
     <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
	</div>
    </div>
  </body>
</html>
